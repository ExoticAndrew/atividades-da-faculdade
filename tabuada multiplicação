javascript


function gerarTabuada(numero) {
    let resultado = []; 
    for (let i = 1; i <= 10; i++) {
        resultado.push(`${numero} x ${i} = ${numero * i}`); 
    }
    console.log(resultado.join(", ")); 
}


gerarTabuada(3); // Saída: 3 x 1 = 3, 3 x 2 = 6, 3 x 3 = 9, 3 x 4 = 12, 3 x 5 = 15, 3 x 6 = 18, 3 x 7 = 21, 3 x 8 = 24, 3 x 9 = 27, 3 x 10 = 30
