java script


function calcularFatorial(numero) {
    let fatorial = 1; 

    for (let i = 1; i <= numero; i++) {
        fatorial *= i; 
    }

    return fatorial; 
}


const resultado = calcularFatorial(5); 
console.log(resultado); 
